<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OrganizzeClone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ciano_200</item>
        <item name="colorPrimaryVariant">@color/ciano_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/vermelho_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ciano_500</item>
        <item name="colorSecondaryVariant">@color/ciano_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="DespesaTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/cor_despesa</item>
        <item name="colorPrimaryVariant">@color/cor_despesa_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.OrganizzeClone.Receita" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/cor_receita</item>
        <item name="colorPrimaryVariant">@color/cor_receita_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>


</resources>