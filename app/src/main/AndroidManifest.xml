<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.organizzeclone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OrganizzeClone">
        <activity
            android:name=".activity.DespesaActivity"
            android:theme="@style/DespesaTheme"
            android:exported="false" />
        <activity
            android:name=".activity.ReceitaActivity"
            android:theme="@style/Theme.OrganizzeClone.Receita"
            android:exported="false" />
        <activity
            android:name=".activity.InicialActivity"
            android:theme="@style/IncialTheme"
            android:exported="false" />
        <activity
            android:name=".activity.EntrarActivity"
            android:exported="false"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.CadastrarActivity"
            android:exported="false"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>